<h1>Send SMS</h1>
<p>Enter a phone number and a message to send an SMS message.</p>

{{#if error}}
  <p class="text-danger">{{ error }}</p>
{{/if}}

<div class="row">
  <form action="/message" method="POST" class="col-lg-4 col-md-6 col-sm-8">
    <div class="form-group">
      <label for="phoneNumber">Phone number</label>
      <input type="tel" class="form-control" id="phoneNumber" placeholder="+447123456789" required>
    </div>
    <div class="form-group">
      <label for="message">Message</label>
      <textarea class="form-control" id="message" placeholder="Enter your message here"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Send message</button>
  </form>
</div>
